<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">


    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/pedal_image"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/pedal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pedal_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="kalispera"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pedal_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pedal_name"
                android:layout_centerHorizontal="true"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="TextView"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pedal_manu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pedal_effect"
                android:layout_centerHorizontal="true"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="TextView"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pedal_instr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pedal_manu"
                android:layout_centerHorizontal="true"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="TextView"
                android:textAllCaps="true"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>